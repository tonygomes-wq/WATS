# Crontab para WATS - Jobs agendados
# Formato: minuto hora dia mês dia_da_semana comando

# Sincronizar mensagens do Teams (a cada 5 minutos)
*/5 * * * * /usr/local/bin/php /var/www/html/cron/sync_teams_messages.php >> /var/log/cron/teams-sync.log 2>&1

# Buscar emails (a cada 10 minutos)
*/10 * * * * /usr/local/bin/php /var/www/html/cron/fetch_emails.php >> /var/log/cron/fetch-emails.log 2>&1

# Processar disparos agendados (a cada 1 minuto)
* * * * * /usr/local/bin/php /var/www/html/cron/process_scheduled_dispatches.php >> /var/log/cron/dispatches.log 2>&1

# Limpeza de dados antigos (diariamente às 2h)
0 2 * * * /usr/local/bin/php /var/www/html/cron/cleanup_old_data.php >> /var/log/cron/cleanup.log 2>&1

# Backup do banco de dados (diariamente às 3h)
0 3 * * * /usr/local/bin/php /var/www/html/cron/backup_database.php >> /var/log/cron/backup.log 2>&1

# Calcular analytics (a cada hora)
0 * * * * /usr/local/bin/php /var/www/html/cron/calculate_analytics.php >> /var/log/cron/analytics.log 2>&1

# Linha em branco necessária no final do arquivo
